<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tailwind"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Controller specific channels -->
	<channel-type id="doorNum">
		<item-type>Number</item-type>
		<label>Number of Doors</label>
		<description>Number of garage doors being controlled</description>
		<state min="1" max="3" step="1" pattern="%d" readOnly="true"/>
	</channel-type>

	<channel-type id="nightModeEnabled">
		<item-type>Number</item-type>
		<label>Night Mode</label>
		<description>When night mode is Enabled, ensures that, during the preset time specified in the mobile application,
			TailWind will automatically try to close the garage doors for you.</description>
		<state readOnly="true">
			<options>
				<option value="0">Disabled</option>
				<option value="1">Enabled</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="ledBrightness">
		<item-type>Dimmer</item-type>
		<label>LED Brightness</label>
		<description>Controller LED brightness .</description>
		<category>Light</category>
		<state min="0" max="100" step="5" pattern="%d %%"/>
	</channel-type>

	<channel-type id="routerRssi">
		<item-type>Number</item-type>
		<label>WiFi RSSI</label>
		<description>WiFi network received signal strength, readings between Strong(-50) and Good(-67) are ideal.</description>
		<category>Power</category>
		<state readOnly="true" pattern="%d dBm"/>
	</channel-type>

	<channel-type id="productID" advanced="true">
		<item-type>String</item-type>
		<label>Model Number</label>
		<description>Tailwind device model number</description>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="deviceID" advanced="true">
		<item-type>String</item-type>
		<label>Device ID</label>
		<description>Tailwind device id (MAC address)</description>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="firmwareVersion" advanced="true">
		<item-type>String</item-type>
		<label>Firmware Version</label>
		<description>Firmware version number</description>
	</channel-type>

	<!-- Door specific channels -->
	<channel-type id="index">
		<item-type>Number</item-type>
		<label>Door Number</label>
		<description>Door number index (0-2)</description>
		<state readOnly="true">
			<options>
				<option value="0">Door 1</option>
				<option value="1">Door 2</option>
				<option value="2">Door 3</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="status">
		<item-type>String</item-type>
		<label>Door Status</label>
		<description>Door status (open, close, lock, enable, disable, reboot)</description>
		<state readOnly="true">
			<options>
				<option value="open">Open</option>
				<option value="partial">Partially Open</option>
				<option value="close">Closed</option>
				<option value="lock">Locked</option>
				<option value="enable">Door is Enabled</option>
				<option value="disable">Door is Disabled</option>
				<option value="reboot">Controller rebooted after receiving a reboot command</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="openClose">
		<item-type>String</item-type>
		<label>Door Control</label>
		<description>Door control (open, partial open, close)</description>
		<state>
			<options>
				<option value="open">Open</option>
				<option value="partial">Partially Open</option>
				<option value="close">Close</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="lockup">
		<item-type>Number</item-type>
		<label>Door Locked Up Status</label>
		<description>Door lockup (0 - not locked up, 1 - locked up)</description>
		<state readOnly="true">
			<options>
				<option value="0">Un-locked</option>
				<option value="1">Locked</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="disabled">
		<item-type>Number</item-type>
		<label>Door Is Configured</label>
		<description>Door is configured (0 - yes, 1 - no)</description>
		<state readOnly="true">
			<options>
				<option value="0">Yes</option>
				<option value="1">No</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="partialOpen">
		<item-type>Number</item-type>
		<label>Partial Open Time</label>
		<description>Partial door open time in seconds (0.5 - 15)</description>
		<state min="0.5" max="15" step="0.1" pattern="%.1f s"/>
	</channel-type>

</thing:thing-descriptions>
