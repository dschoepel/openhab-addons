	<!-- Channel Groups -->
	<channel-group-type id="controller">
		<label>Controller</label>
		<channels>
			<channel id="doorNum" typeId="doorNum"/>
			<channel id="nightModeEnabled" typeId="nightModeEnabled"/>
			<channel typeId="ledBrightness" id="ledBrightness"/>
			<channel typeId="routerRssi" id="routerRssi"/>
			<channel typeId="productID" id="productID"/>
			<channel typeId="deviceID" id="deviceID"/>
		</channels>
	</channel-group-type>

	<channel-group-type id="door1Controls">
		<label>Door 1</label>
		<channels>
			<channel id="index" typeId="index"/>
			<channel id="status" typeId="status"/>
			<channel id="lockup" typeId="lockup"/>
